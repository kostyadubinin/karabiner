{
  "title": "General",
  "rules": [
    {
      "description": "Change Control-H to Delete",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": [
                "control"
              ],
              "optional": [
                "caps_lock",
                "option"
              ]
            }
          },
          "to": [
            {
              "key_code": "delete_or_backspace"
            }
          ]
        }
      ]
    },
    {
      "description": "Post Escape if Left Control is pressed alone",
      "manipulators": {
        "type": "basic",
        "from": {
          "key_code": "left_control",
          "modifiers": {
            "optional": ["any"]
          }
        },
        "to": [
          {
            "key_code": "left_control",
            "lazy": true
          }
        ],
        "to_if_alone": [
          {
            "key_code": "escape"
          }
        ]
      }
    },
    {
      "description": "",
      "manipulators": {}
    }
  ]
}
